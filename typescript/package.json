{
  "name": "npm-ts-workspaces-example",
  "private": true,
  "scripts": {
    "clean": "rimraf \"packages/**/lib\" \"packages/**/*.tsbuildinfo\"",
    "compile": "npm run clean && tsc -b tsconfig.build.json",
    "prettier": "prettier \"*.{js,json,yml,md}\" \"packages/**/*\"",
    "format": "npx dprint fmt",
    "format:check": "npx dprint check",
    "format:old": "npm run prettier -- --write",
    "format:old:check": "npm run prettier -- --check",
    "lint": "npm run format:check",
    "test": "lerna run test",
    "prepare": "npm run compile",
    "start:web": "npm run dev --workspace @oyelowo/frontend-main",
    "start:lib:story": "npm run storybook --workspace @oyelowo/lib-core",
    "start:mobile": "npm run start --workspace @oyelowo/mobile-main",
    "start:mobile:android": "npm run android --workspace @oyelowo/mobile-main",
    "start:mobile:ios": "npm run ios --workspace @oyelowo/mobile-main",
    "start:mobile:web": "npm run web --workspace @oyelowo/mobile-main",
    "clean:node_modules": "find . -name \"node_modules\" -type d -exec rm -rf '{}' +"
  },
  "devDependencies": {
    "lerna": "4.0.0",
    "prettier": "2.4.1",
    "rimraf": "3.0.2",
    "typescript": "4.4.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@emotion/react": "^11.6.0",
    "dprint": "^0.18.2"
  }
}
